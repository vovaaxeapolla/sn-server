ALTER TABLE users ADD COLUMN nickname VARCHAR(63);

ALTER TABLE posts ALTER COLUMN authorid TYPE INTEGER;

ALTER TABLE posts ADD COLUMN image TEXT;

ALTER TABLE users ADD COLUMN avatar TEXT;

CREATE TABLE posts(
    id SERIAL PRIMARY KEY, 
    authorid BIGSERIAL,
    date TIMESTAMP,
    text TEXT
);

CREATE TABLE users(
    id SERIAL PRIMARY KEY, 
    login VARCHAR(63),
    password VARCHAR(63),
        name VARCHAR(63),
    surname VARCHAR(63),
    nickname VARCHAR(63)
);

CREATE TABLE postcomments(
    id SERIAL PRIMARY KEY, 
    postid INTEGER,
    authorid INTEGER,
    date TIMESTAMP,
    text TEXT
);

